          <%= image_tag "bootstrap-jquery-html5-css3.png" %><br>
        </div>
      </div>
      <div class="small-12 medium-4 large-4 columns">
        <div class="panel panel-radius custom-panel hp-panel">
          <h5 class="welcome-page-h5">Back End</h5>
          <div>
            <div class="small-6 large-6 columns">
              <%= image_tag "ruby-logo.png" %>
